@model HotelManagement.Models.Booking
@{
    ViewBag.Title = "Delete";
}
<script src="https://cdn.tailwindcss.com"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" crossorigin="anonymous" referrerpolicy="no-referrer" />
<style>
    body {
        font-family: 'Inter', sans-serif;
        background-color: #f3f4f6;
    }
</style>
<div class="flex justify-center items-center p-6 md:p-10 lg:p-16">
    <div class="bg-white rounded-2xl shadow-xl p-8 w-full max-w-2xl text-center">
        <div class="text-red-500 mb-6">
            <i class="fas fa-exclamation-triangle text-6xl"></i>
        </div>
        <h2 class="text-3xl font-extrabold text-gray-900 mb-4">Are you sure you want to delete this booking?</h2>
        <h3 class="text-xl text-gray-600 mb-8">This action cannot be undone.</h3>
        <div class="border-t-2 border-gray-100 pt-6 mt-6">
            <dl class="space-y-4 text-left">
                <div class="grid grid-cols-1 sm:grid-cols-2 gap-x-6 gap-y-2">
                    <div class="flex items-center">
                        <dt class="text-gray-500 font-medium w-36">Booking ID:</dt>
                        <dd class="text-gray-900 font-semibold">@Html.DisplayFor(model => model.BookingId)</dd>
                    </div>
                    <div class="flex items-center">
                        <dt class="text-gray-500 font-medium w-36">Guest ID:</dt>
                        <dd class="text-gray-900 font-semibold">@Html.DisplayFor(model => model.GuestId)</dd>
                    </div>
                    <div class="flex items-center">
                        <dt class="text-gray-500 font-medium w-36">Room ID:</dt>
                        <dd class="text-gray-900 font-semibold">@Html.DisplayFor(model => model.RoomId)</dd>
                    </div>
                    <div class="flex items-center">
                        <dt class="text-gray-500 font-medium w-36">Booking Date:</dt>
                        <dd class="text-gray-900 font-semibold">@Html.DisplayFor(model => model.BookingDate)</dd>
                    </div>
                    <div class="flex items-center">
                        <dt class="text-gray-500 font-medium w-36">Check-in Date:</dt>
                        <dd class="text-gray-900 font-semibold">@Html.DisplayFor(model => model.CheckInDate)</dd>
                    </div>
                    <div class="flex items-center">
                        <dt class="text-gray-500 font-medium w-36">Check-out Date:</dt>
                        <dd class="text-gray-900 font-semibold">@Html.DisplayFor(model => model.CheckOutDate)</dd>
                    </div>
                    <div class="flex items-center">
                        <dt class="text-gray-500 font-medium w-36">Total Amount:</dt>
                        <dd class="text-gray-900 font-semibold">@String.Format("{0:C}", Model.TotalAmount)</dd>
                    </div>
                </div>
            </dl>
        </div>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="mt-8 flex justify-center space-x-4">
                <a href="@Url.Action("Index")" class="bg-gray-300 hover:bg-gray-400 text-gray-800 font-bold py-3 px-8 rounded-full shadow-lg transition duration-300">
                    <i class="fas fa-arrow-left mr-2"></i> Cancel
                </a>
                <button type="submit" class="bg-red-600 hover:bg-red-700 text-white font-bold py-3 px-8 rounded-full shadow-lg transition duration-300">
                    <i class="fas fa-trash-alt mr-2"></i> Delete
                </button>
            </div>
        }
    </div>
</div>
