@model HotelManagement.Models.Booking

@{
    ViewBag.Title = "Details";
}

<script src="https://cdn.tailwindcss.com"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" crossorigin="anonymous" referrerpolicy="no-referrer" />
<style>
    body {
        font-family: 'Inter', sans-serif;
        background-color: #f3f4f6;
    }
</style>
<div class="flex justify-center items-center p-6 md:p-10 lg:p-16">
    <div class="bg-white rounded-2xl shadow-xl p-8 w-full max-w-2xl">
        <h2 class="text-3xl font-extrabold text-gray-900 mb-6 text-center">Booking Details #@Html.DisplayFor(model => model.BookingId)</h2>
        <div class="border-t-2 border-gray-100 pt-6 mt-6">
            <dl class="space-y-4 text-left">
                <div class="grid grid-cols-1 sm:grid-cols-2 gap-x-6 gap-y-2">
                    <div class="flex items-center">
                        <dt class="text-gray-500 font-medium w-36">Guest Name:</dt>
                        <dd class="text-gray-900 font-semibold">@Html.DisplayFor(model => model.GuestName)</dd>
                    </div>
                    <div class="flex items-center">
                        <dt class="text-gray-500 font-medium w-36">Room Number:</dt>
                        <dd class="text-gray-900 font-semibold">@Html.DisplayFor(model => model.RoomNumber)</dd>
                    </div>
                    <div class="flex items-center">
                        <dt class="text-gray-500 font-medium w-36">Room Type:</dt>
                        <dd class="text-gray-900 font-semibold">@Html.DisplayFor(model => model.RoomType)</dd>
                    </div>
                    <div class="flex items-center">
                        <dt class="text-gray-500 font-medium w-36">Booking Date:</dt>
                        <dd class="text-gray-900 font-semibold">@Html.DisplayFor(model => model.BookingDate)</dd>
                    </div>
                    <div class="flex items-center">
                        <dt class="text-gray-500 font-medium w-36">Check-in Date:</dt>
                        <dd class="text-gray-900 font-semibold">@Html.DisplayFor(model => model.CheckInDate)</dd>
                    </div>
                    <div class="flex items-center">
                        <dt class="text-gray-500 font-medium w-36">Check-out Date:</dt>
                        <dd class="text-gray-900 font-semibold">@Html.DisplayFor(model => model.CheckOutDate)</dd>
                    </div>
                    <div class="flex items-center">
                        <dt class="text-gray-500 font-medium w-36">Total Amount:</dt>
                        <dd class="text-gray-900 font-semibold">@String.Format("{0:C}", Model.TotalAmount)</dd>
                    </div>
                </div>
            </dl>
        </div>
        <div class="mt-8 flex justify-center space-x-4">
            <a href="@Url.Action("Edit", new { id = Model.BookingId })" class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-3 px-8 rounded-full shadow-lg transition duration-300">
                <i class="fas fa-edit mr-2"></i> Edit
            </a>
            <a href="@Url.Action("Index")" class="bg-gray-300 hover:bg-gray-400 text-gray-800 font-bold py-3 px-8 rounded-full shadow-lg transition duration-300">
                <i class="fas fa-arrow-left mr-2"></i> Back to List
            </a>
        </div>
    </div>
</div>
