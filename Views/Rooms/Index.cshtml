@model IEnumerable<HotelManagement.Models.Room>

@{
    ViewBag.Title = "Rooms List";
}


<h2>Rooms List</h2>

@if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
{ 
<p>
    @* Html.ActionLink: A Razor helper to generate an HTML <a> tag (hyperlink). *@
    @* "Create New": The text displayed for the link. *@
    @* "Create": The name of the action method in the current controller (RoomsController) to navigate to. *@
    @* null: No route values needed for this simple link. *@
    @* new { @class = "btn btn-primary" }: HTML attributes for the link (CSS class). *@


    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })
</p>
}
<table class="table table-striped table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.RoomNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RoomType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsAvailable)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RoomNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RoomType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsAvailable)
            </td>
            <td>
@if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
{
                @Html.ActionLink("Edit", "Edit", new { id = item.RoomID }, new { @class = "btn btn-info btn-sm" })
               @Html.ActionLink("Delete", "Delete", new { id = item.RoomID }, new { @class = "btn btn-danger btn-sm" })
}
              | @Html.ActionLink("Details", "Details", new { id = item.RoomID }, new { @class = "btn btn-secondary btn-sm" }) |
               
            </td>
        </tr>
    }

</table>

