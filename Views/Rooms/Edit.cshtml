        display: flex;
        align-items: center;
        margin-bottom: 15px;
    }

    .form-horizontal .control-label {
        flex: 0 0 150px;
        text-align: right;
        padding-right: 15px;
        font-weight: bold;
    }

    .form-horizontal .col-md-10 {
        flex: 1;
    }

    .form-control {
        width: 100%;
        padding: 8px;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-sizing: border-box;
    }

    .checkbox {
        padding-top: 7px;
    }

    .text-danger {
        color: #dc3545;
        font-size: 0.9em;
    }

    .btn {
        padding: 8px 12px;
        border-radius: 4px;
        text-decoration: none;
        color: white;
