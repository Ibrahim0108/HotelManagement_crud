@{
    ViewBag.Title = "Welcome to  Hotel";
}

<!-- Hero Section -->
<section class="hero" style="background-image: url('https://plus.unsplash.com/premium_photo-1661881436846-5a0f53025711?w=600&auto=format&fit=crop&q=60&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxzZWFyY2h8MXx8aG90ZWwlMjBsb2JieXxlbnwwfHwwfHx8MA%3D%3D'); background-size: cover; background-position: center; padding: 150px 0; color: white; text-align: center;">
    <div class="container">
        <h1>Welcome to {  } Hotel</h1>
        <p class="lead">Experience elegance, comfort, and exceptional service in the heart of the city.</p>
        <a href="/Rooms" class="btn btn-primary btn-lg">Explore Rooms &amp; Suites</a>
    </div>
</section>

<!-- Features Section -->
<section class="features py-5">
    <div class="container">
        <div class="row text-center">
            <div class="col-md-4">
                <h2>Luxurious Accommodations</h2>
                <p>Choose from our spacious rooms and suites, each thoughtfully designed for comfort and elegance.</p>
            </div>
            <div class="col-md-4">
                <h2>Fine Dining</h2>
                <p>Indulge in world-class cuisine crafted by our award-winning chefs at our in-house restaurants.</p>
            </div>
            <div class="col-md-4">
                <h2>Spa & Wellness</h2>
                <p>Relax and rejuvenate with our full‑service spa, fitness center, and serene wellness services.</p>
            </div>
        </div>
    </div>
</section>

<!-- Image Gallery -->
<section class="gallery py-5 bg-light">
    <div class="container text-center">
        <h2>Explore Our Spaces</h2>
        <div class="row">
            <div class="col-sm-4">
                <img src="https://plus.unsplash.com/premium_photo-1661929519129-7a76946c1d38?w=600&auto=format&fit=crop&q=60&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxzZWFyY2h8MXx8bHV4dXJ5JTIwaG90ZWx8ZW58MHx8MHx8fDA%3D" alt="Grand Spacious Lobby" class="img-fluid rounded mb-3">
                <p>Lobby Ambience</p>
            </div>
            <div class="col-sm-4">
                <img src="https://thumbs.dreamstime.com/b/luxury-hotel-lobby-reception-desk-interior-design-luxury-hotel-lobby-reception-desk-interior-design-366444164.jpg?w=992" alt="Elegant Reception Area" class="img-fluid rounded mb-3">
                <p>Reception Area</p>
            </div>
            <div class="col-sm-4">
                <img src="https://images.pexels.com/photos/53464/sheraton-palace-hotel-lobby-architecture-san-francisco-53464.jpeg?auto=compress&cs=tinysrgb&dpr=1&w=500" alt="Stylish Wooden Interior" class="img-fluid rounded mb-3">
                <p>Interior Design</p>
            </div>
        </div>
    </div>
</section>

<!-- Call to Action -->
<section class="cta py-5">
    <div class="container text-center">
        <h2>Ready for an unforgettable stay?</h2>
        <a href="/Booking" class="btn btn-success btn-lg">Book Your Stay Now</a>
    </div>
</section>
