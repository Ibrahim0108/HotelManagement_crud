@{
    ViewBag.Title = "Contact Us";
}

<!-- Page Header -->
<section class="page-header text-center py-5" style="background-color: #f5f5f5;">
    <div class="container">
        <h1 class="display-4">Contact {  } Hotel</h1>
        <p class="lead">We’d love to hear from you. Reach out to us anytime — we’re here to help 24/7.</p>
    </div>
</section>

<!-- Contact Info & Form Section -->
<section class="contact-info-form py-5">
    <div class="container">
        <div class="row">
            <!-- Contact Info -->
            <div class="col-md-6 mb-4">
                <h3>Hotel Address</h3>
                <p>
                    <strong>{  } Hotel</strong><br />
                    45 trillerbark Avenue, Downtown<br />
                    123 <br />
                    <abbr title="Phone">Phone:</abbr> + 24738163782<br />
                    <abbr title="Email">Email:</abbr> <a href="mailto:youremail.com">your_email.com</a>
                </p>

                <h4>Departments</h4>
                <p>
                    <strong>Reservations:</strong> <a href="mailto:your_email.com">your_email.com</a><br />
                    <strong>Support:</strong> <a href="mailto:your_email.com">your_email.com</a><br />
                    <strong>Events & Marketing:</strong> <a href="mailto:your_email.com">your_email.com</a>
                </p>
            </div>

            <!-- Contact Form -->
            <div class="col-md-6">
                <h3>Send Us a Message</h3>
                <form>
                    <div class="form-group">
                        <label for="name">Full Name</label>
                        <input type="text" class="form-control" id="name" placeholder="Your name">
                    </div>
                    <div class="form-group mt-3">
                        <label for="email">Email address</label>
                        <input type="email" class="form-control" id="email" placeholder="your@example.com">
                    </div>
                    <div class="form-group mt-3">
                        <label for="message">Message</label>
                        <textarea class="form-control" id="message" rows="5" placeholder="Your message here..."></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary mt-3">Send Message</button>
                </form>
            </div>
        </div>
    </div>
</section>

