@{
    ViewBag.Title = "About Us";
    ViewBag.Message = "Discover the GrandVista Hotel Experience";
}

<!-- Hero Section -->
<section class="about-hero py-5 text-white text-center"
         style="background-image: url('https://images.unsplash.com/photo-1506744038136-46273834b3fb?auto=format&fit=crop&w=1600&q=80');
           background-size: cover;
           background-position: center;">
    <div class="container">
        <h1 class="display-4 fw-bold">About GrandVista Hotel</h1>
        <p class="lead">Where Elegance Meets Comfort</p>
    </div>
</section>

<!-- Content Section -->
<section class="about-content py-5">
    <div class="container" style="padding-left: 30px; padding-right: 30px;">
        <div class="row align-items-center mb-5">
            <div class="col-md-6 mb-4 mb-md-0">
                <h2 class="mb-3">Our Story</h2>
                <p>
                    GrandVista Hotel was founded to create a haven of luxury and relaxation in the city’s heart. Since our inception, we've redefined hospitality by offering a perfect blend of sophistication, modernity, and personalized service.
                </p>
                <p>
                    Whether you're traveling for business or leisure, we ensure your stay is truly memorable through attention to detail and warm hospitality.
                </p>
            </div>
            <div class="col-md-6">
                <img src="https://images.unsplash.com/photo-1494526585095-c41746248156?auto=format&fit=crop&w=1280&q=80"
                     alt="Hotel Exterior"
                     class="img-fluid rounded shadow"
                     style="max-height: 350px; object-fit: cover; width: 100%; margin: 15px;">
            </div>
        </div>

        <div class="row align-items-center mb-5">
            <div class="col-md-6 order-md-2 mb-4 mb-md-0">
                <h2 class="mb-3">Our Mission</h2>
                <p>
                    We aim to provide an exceptional and personalized experience to every guest. Our dedication to excellence and sustainability is at the core of everything we do.
                </p>
                <ul>
                    <li>24/7 Front Desk & Concierge</li>
                    <li>Locally Sourced Dining</li>
                    <li>Spa, Gym, and Wellness Center</li>
                    <li>Eco-Friendly Operations</li>
                </ul>
            </div>
            <div class="col-md-6 order-md-1">
                <img src="https://images.unsplash.com/photo-1512917774080-9991f1c4c750?auto=format&fit=crop&w=800&q=80"
                     alt="Room Interior"
                     class="img-fluid rounded shadow"
                     style="max-height: 350px; object-fit: cover; width: 100%; margin: 15px;">
            </div>
        </div>

        <div class="text-center">
            <h2 class="mb-3">Why Choose Us?</h2>
            <p class="lead">Because your comfort is our priority. Experience the perfect blend of luxury, location, and warmth at GrandVista Hotel.</p>
            <a href="Contact" class="btn btn-outline-primary btn-lg mt-3">Contact Us</a>
        </div>
    </div>
</section>
